<form method="post" action="/approverejectrollbacktransactionrequests">
  	<TABLE BORDER=1>
  	<TR>
    <TD>Approve/Reject</TD>
    <TD>ID</TD>

    <TD>Transaction ID</TD>
    <TD>Debit Account No</TD>
    <TD>Credit Account No</TD>
    <TD>Amount</TD>

    </TR>

    <%
    if(requests.length>0)
    {
    for (var i=0;i<requests.length;i++)
    {    

    	%>
        <TR>
        <TD><input type="checkbox" name="checkboxreq" value=<%=requests[i].TranscationID+","+requests[i].DebitAadharNo+","+requests[i].CreditAadharNo+","+requests[i].Amount+","+requests[i].DebitAccount+","+requests[i].CreditAccount%>></TD>
        <TD><%=requests[i].TransactionID%></TD>

        <TD><%=requests[i].DebitAccount%></TD>
        <TD><%=requests[i].CreditAccount%></TD>
        <TD><%=requests[i].Amount%></TD>
        </TR>
        <%
    }
    
    %>
	</TABLE>
    <input type="radio" name="app" value="Approve">Approve<br>
  <input type="radio" name="app" value="Delete">Reject<br>
<input type="hidden" id="hidden" name="hidden">
<button type="submit" onclick="return abc();">Submit</button>
<%}%>
</form>

<script>
function abc(){
var tags = document.getElementsByName('checkboxreq');
var l=0;
for(var i = 0; i < tags.length; ++i)
{
    if(tags[i].checked)
    l=l+1;
}
var hidden=document.getElementById("hidden");
hidden.value=l;
var tag=document.getElementsByName('checkboxreq');
i = tag.length - 1;
var check1=0;
var check2=0;
for ( ; i > -1 ; i-- ) {

    if ( tag[i].checked ) { check1=1; }

}

var tag1=document.getElementsByName('app');
i = tag1.length - 1;

for ( ; i > -1 ; i-- ) {

    if ( tag1[i].checked ) { check2=1; }

}
 if(check1==0 && check2==0){

   alert("Please select at least one transaction and approve/reject button");
    return false;
 }
 else if(check1==1 && check2==0){

   alert("Please state approve or reject ");
    return false;
 }
 else if(check1==0 && check2==1){

   alert("Please select at least one transaction");
   return false;
 }
 else if(check1==1 && check2==1){
   return true;
 }

}
</script>
}
</script>